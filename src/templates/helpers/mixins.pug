//Menu Item
mixin item(title, url)
  li.main-nav-list__item(class = pageTitle == title ? 'active' : '')
    a.main-nav__link(href=url)= title

mixin submenu-item(title, url, customClass)
  li.dropdown_menu-item(class = pageTitle == title ? 'active' : '')
    a.dropdown_menu-link(href=url)= title

